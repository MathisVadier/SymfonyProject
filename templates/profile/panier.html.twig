{% extends "base.html.twig" %}

{% block body %}
    <section class="title">
        <h1>Mon panier</h1>
    </section>

    <table class="table">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for element in dataPanier %}
        <tr>
            <td>{{ element.produit.name }}</td>
            <td class="text-right">{{ element.produit.price / 100}} €</td>
            <td>{{ element.quantite }}</td>
            <td class="text-right">{{ element.quantite * element.produit.price / 100}} €</td>
            <td>
                <a href="{{ path("profile_panier", {id: element.produit.id})}}"
                   class="btn btn-success">
                    <i class="bi bi-cart-plus"></i>
                +</a>
                <a href="{{ path("profile_remove", {id: element.produit.id})}}"
                   class="btn btn-warning">
                    <i class="bi bi-cart-dash"></i>
                -</a>
                <a href="{{ path("profile_delete", {id: element.produit.id})}}" class="btn btn-danger">
                    <i class="bi bi-cart-x"></i>
                x</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5" class="text-center">Votre panier est vide</td>
        </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3">Total</td>
            <td class="text-end">{{ total /100 }} €</td>
        </tr>
        </tfoot>
    </table>

{% endblock %}